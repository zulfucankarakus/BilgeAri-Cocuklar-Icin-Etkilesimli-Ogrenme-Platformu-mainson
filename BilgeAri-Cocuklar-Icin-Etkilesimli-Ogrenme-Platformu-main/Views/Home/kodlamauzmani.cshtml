@{
    ViewData["Title"] = "Kodlama Uzmanı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/kodlamauzmani.css" asp-append-version="true" />
    <style>
        /* Kodlama uzmanı için özel body stilleri */
        body {
            /* Body stilleri artık site.css'den geliyor */
        }
        
        /* Tema butonlarını gizleme */
        body[data-theme="light"] #light-mode-btn { display: none; }
        body[data-theme="dark"] #dark-mode-btn { display: none; }
        
        /* Karanlık tema */
        body[data-theme="dark"] {
            background-color: #1a1a2e;
            background-image: 
                radial-gradient(circle at 100% 150%, 
                    #1a1a2e 24%, #16213e 25%, #16213e 27%, #1a1a2e 28%,
                    #1a1a2e 34%, #16213e 35%, #16213e 37%, #1a1a2e 38%,
                    #1a1a2e 44%, #16213e 45%, #16213e 47%, #1a1a2e 48%,
                    #1a1a2e 54%, #16213e 55%, #16213e 57%, #1a1a2e 58%,
                    #1a1a2e 64%, #16213e 65%, #16213e 67%, #1a1a2e 68%,
                    #1a1a2e 74%, #16213e 75%, #16213e 77%, #1a1a2e 78%,
                    #1a1a2e 84%, #16213e 85%, #16213e 87%, #1a1a2e 88%,
                    #1a1a2e 94%, #16213e 95%, #16213e 97%, #1a1a2e 98%),
                radial-gradient(circle at 0% 150%, 
                    #1a1a2e 24%, #16213e 25%, #16213e 27%, #1a1a2e 28%,
                    #1a1a2e 34%, #16213e 35%, #16213e 37%, #1a1a2e 38%,
                    #1a1a2e 44%, #16213e 45%, #16213e 47%, #1a1a2e 48%,
                    #1a1a2e 54%, #16213e 55%, #16213e 57%, #1a1a2e 58%,
                    #1a1a2e 64%, #16213e 65%, #16213e 67%, #1a1a2e 68%,
                    #1a1a2e 74%, #16213e 75%, #16213e 77%, #1a1a2e 78%,
                    #1a1a2e 84%, #16213e 85%, #16213e 87%, #1a1a2e 88%,
                    #1a1a2e 94%, #16213e 95%, #16213e 97%, #1a1a2e 98%) 
                top left/100% 50% repeat-x;
        }
        
        body[data-theme="dark"] .activity-card {
            background: #2d3748;
            color: #e2e8f0;
        }
        
        body[data-theme="dark"] .activity-card h2 {
            color: #ffa500;
        }
        
        body[data-theme="dark"] .activity-card p {
            color: #cbd5e0;
        }
        
        body[data-theme="dark"] .mascot-container {
            background: rgba(45, 55, 72, 0.9);
            border-color: #ffa500;
        }
        
        body[data-theme="dark"] .speech-bubble {
            background: #1a202c;
            color: #e2e8f0;
        }
        
        body[data-theme="dark"] .speech-bubble::before {
            border-color: transparent #1a202c transparent transparent;
        }
        
        body[data-theme="dark"] .bug-step {
            background: #2d3748;
            border-color: #4a5568;
            color: #e2e8f0;
        }
        
        body[data-theme="dark"] .room-container {
            background: #2d3748;
            border-color: #4a5568;
        }
    </style>
}

<section id="yazilim-sayfasi">
    <div class="software-container-v3">

        <!-- ===== ARI KRALİÇE MASKOT ===== -->
        <div class="mascot-container">
            <svg class="bee-queen-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100">
                <ellipse cx="50" cy="55" rx="35" ry="25" fill="#ffd700" />
                <rect x="25" y="45" width="50" height="8" fill="black" />
                <rect x="20" y="58" width="60" height="8" fill="black" />
                <circle cx="50" cy="30" r="20" fill="#ffd700" />
                <circle cx="40" cy="25" r="5" fill="black" />
                <circle cx="60" cy="25" r="5" fill="black" />
                <path d="M40 10 L30 0" stroke="black" stroke-width="3" />
                <circle cx="30" cy="0" r="3" />
                <path d="M60 10 L70 0" stroke="black" stroke-width="3" />
                <circle cx="70" cy="0" r="3" />
            </svg>

            <div class="speech-bubble" id="kodo-bubble">
                Vızzz! Ben Arı Kraliçe! 🐝 Yazılımın tatlı dünyasına hoş geldin!
            </div>
        </div>

        <!-- ===== ETKİNLİK 1: CANAVAR ===== -->
        <div class="activity-card" data-kodo-text="Kodlar canavarı değiştirir!">
            <h2>👾 Kod ile Canavar Yarat!</h2>

            <div class="monster-display">
                <svg id="monster" viewBox="0 0 100 100" width="150">
                    <path id="monster-hat"
                          d="M 40 25 Q 50 5 60 25 L 55 28 Q 50 15 45 28 Z" />
                    <circle id="monster-body" cx="50" cy="60" r="40" />
                    <circle id="monster-eye1" cx="35" cy="50" r="8" />
                    <circle id="monster-eye2" cx="65" cy="50" r="8" />
                    <path id="monster-mouth"
                          d="M 30 75 Q 50 60 70 75"
                          stroke="black" stroke-width="3" fill="none" />
                </svg>
            </div>

            <div class="controls">
                <button id="btn-color" class="control-btn">Rengini Değiştir</button>
                <button id="btn-eyes" class="control-btn">Gözleri Büyüt</button>
                <button id="btn-mouth" class="control-btn">Mutlu Yap</button>
                <button id="btn-hat" class="control-btn">👑 Anten</button>
                <button id="btn-reset" class="control-btn reset-btn">Sıfırla</button>
            </div>
        </div>

        <!-- ===== ETKİNLİK 2: BUG HUNT ===== -->
        <div class="activity-card">
            <h2>🐞 Hata Avı</h2>

            <div class="bug-hunt-steps">
                <div class="bug-step" id="step1">👟 Ayakkabı</div>
                <div class="bug-step" id="step2">🧦 Çorap</div>
                <div class="bug-step" id="step3">🎒 Çanta</div>
            </div>

            <div id="bug-feedback" class="feedback-text"></div>
            <button id="btn-fix-bug" class="control-btn">Düzelt</button>
        </div>

        <!-- ===== TEMA BUTONLARI ===== -->
        <div class="theme-toggle">
            <span id="dark-mode-btn">🌙</span>
            <span id="light-mode-btn">🌞</span>
        </div>

    </div>
</section>

@section Scripts {
    <script src="~/js/kodlamauzmani.js"></script>
}

